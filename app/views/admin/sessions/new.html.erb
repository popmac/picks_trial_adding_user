<% @title = '管理者としてログイン' %>
<h1><%= @title %></h1>

<%= form_for @form, url: :admin_session do |f| %>
  <div>
    <%= f.label :email, 'メールアドレス' %>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.label :password, 'パスワード' %>
    <%= f.password_field :password %>
  </div>
  <%= f.submit 'ログイン', class: 'btn btn-info' %>
<% end %>

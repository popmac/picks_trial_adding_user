<% @title = '記事の投稿' %>
<h1><%= @title %></h1>

<%= form_for @article, url: '/admin/articles' do |f| %>
  <div class="form-group">
    <%= f.label :site_url %>
    <%= f.text_field :site_url %>
  </div>
  <div class="form-group">
    <%= f.label :site_name %>
    <%= f.text_field :site_name %>
  </div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div class="form-group">
    <%= f.label :picture %>
    <%= f.text_field :picture %>
  </div>
  <div class="form-group">
    <%= f.label :category_id %>
    <%= f.select :category_id, Category.all.map{ |c| [c.name, c.id] } %>
  </div>
  <div class="form-group">
    <%= f.label :published %>
    <%= f.check_box :published %>
  </div>
  <%= f.submit '記事を作成する' %>
<% end %>

<% @title = 'ログイン' %>

<div id="login-form">
  <h1><%= @title %></h1>

  <%= form_for @form, url: :customer_session do |f| %>
    <div>
      <%= f.label :email, 'メールアドレス' %>
      <%= f.email_field :email %>
    </div>
    <div>
      <%= f.label :password, 'パスワード' %>
      <%= f.password_field :password %>
    </div>
    <%= f.submit 'ログイン' %>
  <% end %>
</div>

<%= link_to 'パスワードを忘れた方はこちら', :new_customer_forgot_password %>
